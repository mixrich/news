body {
  margin: 0;
  min-width: screenMinWidth;
  font-family: 'Open Sans', sans-serif;
}

.fl {
  max-width: screenMaxWidth;
  width: 95%;
  margin: 0 auto;
  position: relative;
}

.clearfix::after {
    content: "";
    display: table;
    clear: both;
}

a {
color: inherit;
text-decoration: none;
}

a.link {
  color: linksColor;
  &:hover {
    text-decoration: underline;
  }
}

h1,h2,h3,p {
  margin: 0;
}

.section {
  padding-top: 30px;
}
