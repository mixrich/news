.feedback {
  max-width: 300px;
  &__input {
    font-size: 1rem;
    width: 100%;
    margin-bottom: 15px;
    border-radius: borderRadius;
    border: 2px solid mintColor;
    padding: 10px;
    borderBox();
    borderRadius(5px);
    color: darkColor;
    font-family: "Open Sans",sans-serif;

    &--text {
      height: 100px;
      min-height: 100px;
      max-height: 130px;
      min-width: 100%;
      max-width: 100%;
    }
  }

  &__submit-button {
    width: 100%;
  }

  &__privacy-statement {
    font-size: 0.7rem;
    margin: -10px 0 10px 0;
    a {
      text-decoration: underline;
      &:hover {
        cursor: pointer;
      }
    }
  }

}
