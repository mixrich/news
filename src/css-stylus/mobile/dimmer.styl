.dimmer {



  &__content {
    background: white;
    padding: 30px 40px;
    max-width: 100%;
    max-height: 100%;
    position: static;
    transform: none;
    overflow-y: auto;

  }

  &__close-button {
    color: mediumColor;
    position: absolute;
    top: 5px;
    right: 5px;
    background: rgba(255,255,205,0.1);
    border: none;
    width: 30px;
    height: 30px;
    font-size: 20px;
    &:hover {
      cursor: pointer;
        background: rgba(255,255,205,0.2);
    }
  }

  &__text {
    margin: 0 0 10px 0;
  }


  &--hidden {
    display: none;
  }

}
